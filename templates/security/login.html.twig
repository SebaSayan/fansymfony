{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}


{% block content %}
	<section class="text-white">
		<div class="container">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Bonjour
						{{ app.user.firstName }},
						<a href="{{ path('logout') }}">Deconnexion</a>
					</div>
				{% endif %}
				<div class="row justify-content-center">
					<div class="col-lg-8 col-xl-7">

						<h1 class="h3 mb-3 mt-3 font-weight-normal text-center">Connexion</h1>

						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Votre email" class="form-control mb-3 p-3" autocomplete="email" required autofocus>

						<input type="password" name="password" id="inputPassword" placeholder="Votre mot de passe" class="form-control mb-3 p-3" autocomplete="current-password" required>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


						<button class="btn btn-lg btn-dark mb-3" type="submit">
							Se connecter
						</button>
					</div>
				</div>
			</form>
			<div class="row text-white text-center pb-3">
				<div class="col-lg-2"></div>
				<div class="col-12 col-lg-4">Nouveau sur Fan Coiffure ?
					<a href=" {{path('register')}} ">Créer votre compte</a>
				</div>
				<div class="col-lg-1"></div>
				<div class="col-12 col-lg-4">
					<a href="{{path('reset_password')}}">
						Mot	de passe oublié</a>
				</div>
				<div class="col-lg-1"></div>
			</div>
		</div>
		<hr id="hr-1">
	</div>
</section>{% endblock %}
