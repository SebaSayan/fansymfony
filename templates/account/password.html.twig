{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe
{% endblock %}

{% block content %}
	<section>
		<div class="row justify-content-center text-white">
			<div class="col-lg-8 col-xl-7">
				<div class="example-wrapper">
					<h2 class="mt-3">
						Modifier mon mot de passe</h2>
					<br>
					<a class="" href="{{path('account')}}">
						Retour Ã  mon compte</a>
					<br>
					{{ form_start(form) }}
					{{ form_row(form.firstName)}}
					{{ form_row(form.lastName)}}
					{{ form_row(form.email)}}
					{{ form_row(form.oldPassword,{'label':false,'attr':{'placeholder':"Votre ancien mot de passe"}})}}
					{{ form_row(form.newPassword,{'label':false,'attr':{'placeholder':"Votre nouveau mot de passe"}})}}
					{{ form_row(form.confirmNewPassword,{'label':false,'attr':{'placeholder':"Confirmer votre nouveau mot de passe"}})}}
					{{ form_end(form) }}
				</div>
			</div>
		</div>
		<hr id="hr-1">
	</section>
{% endblock %}
