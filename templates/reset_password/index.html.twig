{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block content %}
	<section>
		<form method="post">
			<div class="row justify-content-center">
				<div class="col-lg-8 col-xl-7">
					<h2 class="text-white text-center mt-3">Réinitialiser le mot de passe</h2>
					<input type="email" name="email" id="inputEmail" placeholder="Votre email" class="form-control mb-3 p-3" autocomplete="email" required autofocus>
					<button class="btn btn-lg btn-dark mb-3" type="submit">
						Réinitialiser mon mot de passe
					</button>
				</div>
			</div>
		</form>
		<hr id="hr-1">
	</section>
{% endblock %}
