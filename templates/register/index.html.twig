{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}


{% block content %}
	<section>
		<div class="row justify-content-center">
			<div class="col-lg-8 col-xl-7">
				<h2 class="text-white text-center">S'inscrire</h2>
				{{ form_start(form) }}
				{{ form_row(form.lastName,{'label':false,'attr':{'placeholder':"Votre nom"}})}}
				{{ form_row(form.firstName,{'label':false,'attr':{'placeholder':"Votre prénom"}})}}
				{{ form_row(form.email,{'label':false,'attr':{'placeholder':"Votre email"}})}}
				{{ form_row(form.password,{'label':false,'attr':{'placeholder':"Votre mot de passe"}})}}
				{{ form_row(form.password_confirm,{'label':false,'attr':{'placeholder':"Confirmation du mot de passe"}})}}
				{{ form_end(form) }}
			</div>
			<div class="text-white text-center mb-3">
				<span class="">Vous possédez déjà un compte ?
					<a href="{{path('login')}}">Identifiez-vous</a>
				</span>
			</div>
		</div>
	</div>
	<hr id="hr-1">
</section>{% endblock %}
